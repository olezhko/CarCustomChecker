<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CarCustomChecker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CarCustomChecker"
    xmlns:views="clr-namespace:CarCustomChecker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="CarCustomChecker">

	<TabBar>
		<ShellContent
			Title="Поиск" Icon="search.png"
			ContentTemplate="{DataTemplate local:MainPage}"
			Route="MainPage" />
		<ShellContent
			Title="Отслеживание" Icon="car.png"
			ContentTemplate="{DataTemplate views:VimsControl}"
			Route="MainPage" />
        <ShellContent
			Title="ЭО" Icon="queue.png"
			ContentTemplate="{DataTemplate views:ElectronicQueue}"
			Route="MainPage" />
    </TabBar>


</Shell>
